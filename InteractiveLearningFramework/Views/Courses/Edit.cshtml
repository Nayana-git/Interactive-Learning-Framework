@model CourseEditVm

@{
    ViewData["Title"] = "Edit";
    ViewData.AddActivePage(ManageNavPages.Course);
}

<style>

    [data-toggle="collapse"] .fa:before {
        content: "\f13a";
    }

    [data-toggle="collapse"].collapsed .fa:before {
        content: "\f139";
    }

    .field-validation-valid {
        display: none;
    }
</style>
@{
    ViewData["Title"] = "Edit";
}
<form method="post" asp-controller="Courses" asp-action="Edit" asp-antiforgery="true" class="form-horizontal" id="courseCreate" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="card">
        <div class="card-header">
            <h6>Course Edit</h6>
        </div>
        <div class="card-body">

            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="accordion" id="accordionExample">
                <div class="card">
                    <div class="card-title" id="headingOne">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            <i class="fa icon" aria-hidden="true"></i>General
                        </button>
                    </div>

                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="Name" class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input class="form-control" asp-for="Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="ShortName" class="col-sm-2 col-form-label">Short Name</label>
                                <div class="col-sm-10">
                                    <input class="form-control" asp-for="ShortName" />
                                    <span asp-validation-for="ShortName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input id="start_date" value="@Model.StartDate" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="form-group row">
                                <label asp-for="EndDate" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">

                                    <input id="end_date" value="@Model.EndDate" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Tag" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Tag" class="form-control" />
                                    <span asp-validation-for="Tag" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-title" id="headingTwo">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                            <i class="fa icon" aria-hidden="true"></i>Description
                        </button>
                    </div>

                    <div id="collapseTwo" class="collapse show" aria-labelledby="headingTwo" data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="ShortDescription" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <textarea asp-for="ShortDescription" rows="4"></textarea>
                                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Name" class="col-sm-2 col-form-label">Description</label>
                                <div class="col-sm-10">
                                    @*<div name="Description" id="Description"></div>*@
                                    <textarea name="Description" id="Description" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Name" class="col-sm-2 col-form-label">Syllabus</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="Syllabus" rows="4"></textarea>
                                    <span asp-validation-for="Syllabus" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-title" id="headingThree">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="true" aria-controls="collapseTwo">
                            <i class="fa icon" aria-hidden="true"></i>Image
                        </button>
                    </div>

                    <div id="collapseThree" class="collapse show" aria-labelledby="headingThree" data-parent="#accordionExample">
                        <div class="card-body">

                            <div class="form-group row">
                                <label asp-for="Image" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">

                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                                        </div>
                                        <div class="custom-file">
                                            <input class="fileUpload custom-file-input" asp-for="Image" accept="image/jpeg, image/jpg">
                                            <label class="custom-file-label" for="Image">Choose file</label>
                                        </div>
                                    </div>
                                    <div class=upload-demo>
                                        <div class=upload-demo-wrap>
                                            <img src="~/uploads/course/@Model.ImageName" alt="..." class="portimg img-thumbnail">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="card">
                    <div class="card-title" id="headingFour">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseFour" aria-expanded="true" aria-controls="collapseFour">
                            <i class="fa icon" aria-hidden="true"></i>Module
                        </button>
                    </div>

                    <div id="collapseFour" class="collapse show" aria-labelledby="headingFour" data-parent="#accordionExample">
                        <div class="card-body">

                            <div class="form-group row">
                                <label for="Name" class="col-sm-2 col-form-label">No. of Moudles</label>
                                <div class="col-sm-10">
                                    <select class="form-control" asp-for="NumberOfModule"
                                            asp-items="@ViewBag.NoOfModules">
                                        <option value="">---No of Modules---</option>
                                        <option>No Of Modules</option>
                                    </select>

                                    <span asp-validation-for="NumberOfModule" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <button type="submit" class="btn btn-success">Save</button>
        <a class="btn btn-danger" asp-controller="Courses" asp-action="Index">Cancel</a>
    </div>
</form>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/javascript.course-date.js" asp-append-version="true"></script>
}
