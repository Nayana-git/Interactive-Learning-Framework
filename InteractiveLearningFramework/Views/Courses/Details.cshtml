@model InteractiveLearningFramework.ViewModels.CourseEditVm
@using Microsoft.AspNetCore.Html;


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<form method="post" asp-controller="Courses" asp-action="CourseEnrollment" asp-antiforgery="true" class="form-horizontal" id="courseCreate" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <h2 class="text-nowrap"> @Html.DisplayFor(model => model.Name)  </h2>


            <div class="col-md-10">
                @*<div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Tag)
                    </div>*@
                <div class="blockquote">
                    @Html.DisplayFor(model => model.Tag)
                </div>
                <div class="col-sm-10">
                    <img src="~/uploads/course/@Model.ImageName" class="bd-placeholder-img" width="200" height="200" />
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        @Html.DisplayNameFor(model => model.StartDate)
                    </div>

                    <div class="col-md-6">
                        @Html.DisplayNameFor(model => model.EndDate)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.StartDate)
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.EndDate)
                    </div>
                </div>
                <br />
                <div class="lead">
                    @Html.DisplayNameFor(model => model.Description)
                </div>
                <div>
                    @(new HtmlString(Model.Description))

                </div>




                @*<div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Image)
                    </div>*@

                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Syllabus)
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Syllabus)
                </div>
                <div>
                    @Html.DisplayNameFor(model => model.NumberOfModule)
                </div>
                <div>
                    @Html.DisplayFor(model => model.NumberOfModule)
                </div>
            </div>
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            <a asp-controller="Home" asp-action="Index">Back to List</a>

            <div>
                <button type="submit" class="btn btn-sm btn-success">
                    Enroll Now
                </button>
            </div>

        </div>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</form>
