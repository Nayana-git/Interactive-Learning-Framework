@model SubModuleVm

@{
    ViewData["Title"] = "Create";
    ViewData.AddActivePage(ManageNavPages.Course);
}

<style>

    [data-toggle="collapse"] .fa:before {
        content: "\f13a";
    }

    [data-toggle="collapse"].collapsed .fa:before {
        content: "\f139";
    }

    .field-validation-valid {
        display: none;
    }
</style>

<form method="post" asp-controller="SubModule" asp-action="Create" asp-antiforgery="true" class="form-horizontal" id="courseCreate" enctype="multipart/form-data">
    <input type="hidden" asp-for="ModuleId" />
    <div class="card">
        <div class="card-header">
            <h6>Create Module</h6>
        </div>
        <div class="card-body">

            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="accordion" id="accordionExample">
                <div class="card">
                    <div class="card-title" id="headingOne">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            <i class="fa icon" aria-hidden="true"></i>Module Title
                        </button>
                    </div>
                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="Name" class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input class="form-control" asp-for="Title" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-title" id="headingTwo">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                            <i class="fa icon" aria-hidden="true"></i>Description
                        </button>
                    </div>

                    <div id="collapseTwo" class="collapse show" aria-labelledby="headingTwo" data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="Content" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">

                                    <textarea name="Content" id="Content"></textarea>
                                    <span asp-validation-for="Content" class="text-danger"></span>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-title" id="headingThree">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="true" aria-controls="collapseTwo">
                            <i class="fa icon" aria-hidden="true"></i>Image
                        </button>
                    </div>

                    <div id="collapseThree" class="collapse show" aria-labelledby="headingThree" data-parent="#accordionExample">
                        <div class="card-body">

                            <div class="form-group row">
                                <label asp-for="File" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">

                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                                        </div>
                                        <div class="custom-file">
                                            <input class="fileUpload custom-file-input" asp-for="File">
                                            <label class="custom-file-label" for="profilepic">Choose file</label>
                                        </div>
                                    </div>
                                    <div class=upload-demo>
                                        <div class=upload-demo-wrap>
                                            <span id="file-upload" class="badge badge-primary"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>

    <div class="card-footer">
        <button type="submit" class="btn btn-success">Save</button>
        <a class="btn btn-danger" asp-controller="SubModule" asp-action="Index">Cancel</a>
    </div>


</form>



@section Scripts {

    <script>

        $(document).ready(function () {
            $('#Content').summernote({
                placeholder: 'Content',
                tabsize: 2,
                height: 300
            });

            $(".custom-file-input").change(function () {
                debugger;
                $("#file-upload").text(this.files[0].name);
            });
        });
    </script>
}
