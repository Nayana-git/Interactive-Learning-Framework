@model EditRoleVm

@{
    ViewData.AddActivePage(ManageNavPages.Role);
}


<form method="post" asp-controller="Role" asp-action="Edit" asp-antiforgery="true" class="form-horizontal">
    <div class="card">
        <div class="card-header">
            <h4>
                Edit Role
            </h4>
        </div>
        <div class="card-body">
            <div class="text-danger" asp-validation-summary="All"></div>
            <input type="hidden" name="RoleId" value="@Model.Role.Id" />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="RoleName">Role Name</label>
                    <input class="form-control" name="RoleName" value="@Model.Role.Name" />
                </div>
                <div class="form-group col-md-6">
                    <label for="Description">Description</label>
                    <input class="form-control" name="Description" value="@Model.Role.Description">
                </div>
            </div>

            @*<div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add to @Model.Role.Name</h5>
                    <table class="table table-condensed table-bordered table-striped">
                        @if (Model.NonMembers.Count() == 0)
                        {
                            <tr>
                                <td colspan="2">All Users Are @Model.Role.Name</td>
                            </tr>
                        }
                        else
                        {
                            foreach (User user in Model.NonMembers)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>
                                        <input type="checkbox" name="IdsToAdd" value="@user.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            </div>*@
            <div class="card mt-2">
                <div class="card-body">
                    <h5 class="card-title">Users in Role @Model.Role.Name</h5>
                    <table class="table table-condensed table-bordered table-striped">
                        @if (Model.Members.Count() == 0)
                        {
                            <tr>
                                <td colspan="2">
                                    No Users are in @Model.Role.Name
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (User user in Model.Members)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    @*<td>
                                        <input type="checkbox" name="IdsToRemove" value="@user.Id" />
                                    </td>*@
                                </tr>
                            }
                        }
                    </table>
                </div>
            </div>




        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="reset" class="btn btn-primary">Reset</button>
            <a class="btn btn-primary" asp-controller="Role" asp-action="Index">Cancel</a>
        </div>

    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}



